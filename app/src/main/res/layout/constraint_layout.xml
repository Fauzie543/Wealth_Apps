<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="24dp">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="311dp"
        android:layout_height="132dp"
        app:srcCompat="@drawable/foto6"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:text="Masuk"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="38dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyPrimary"
        android:textSize="14sp"
        android:text="Selamat datang !"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyPrimary"
        android:textSize="16dp"
        android:text="Masukkan Email atau Nomor HP"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="32dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ketik salah satu di sini"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/outline_email_24"
        style="@style/edit_text_style" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyPrimary"
        android:textSize="16sp"
        android:text="Kata Sandi"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="24dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ketik di sini"
        style="@style/edit_text_style"
        android:layout_marginTop="8dp"
        android:drawableEnd="@drawable/outline_visibility_off_24"
        android:drawableStart="@drawable/outline_lock_24"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lupa Kata Sandi ?"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        android:textAlignment="viewEnd"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:backgroundTint="@color/greySecondary"
        android:layout_marginTop="32dp"
        android:padding="14dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="atau masuk dengan"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/greySecondary"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:backgroundTint="@color/greySecondary"
        android:layout_marginTop="32dp"
        android:padding="14dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"/>


</LinearLayout>